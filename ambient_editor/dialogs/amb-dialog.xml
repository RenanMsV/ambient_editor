      <label>0</label>
      <live>true</live>
      <format>%-.1f</format>
      <property>sim/addons/ambient-editor/scene/diffuse/red</property>
    </text>
    <slider>
      <live>true</live>
      <property>sim/addons/ambient-editor/scene/diffuse/red</property>
      <min>0</min>
      <max>1</max>
